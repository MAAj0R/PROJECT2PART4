<p id="notice"><%= notice %></p>

<h1>Entrenadores</h1>


        <div class="mass">
          <%= link_to new_post_path do %>
          <img src=" <%= image_path('mass.png') %> " alt=""> 
          <% end %>
        </div>

<table class="table table-striped table-hover" id="tabla">
  <thead>
    <tr>
      <th>Entrenador</th>
      <th>Juego</th>
      <th>Idioma</th>
      <th> Comentarios </th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr id="tabla2">
        <td><%= image_tag(post.picture, size:"100x100") %></td>
        <%#= post.title %>
        <%#s= pot.content %>
        <td> <%= image_tag post.game.image, size:"200x100" %> </td>
        <th> <%= image_tag post.language.image, size:"60x50" %> </th>

         <td><%= post.comments.count %></td>
        <td><%= link_to 'Ver', post %></td>
        <td><%= link_to 'Editar', edit_post_path(post) if can? :edit, post %> </td>
        <td><%= link_to 'Borrar', post, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, post  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

